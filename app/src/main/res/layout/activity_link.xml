<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/room"
    tools:context="com.example.hottest.cutephonelink.Link">
    <!--自定义游戏主界面-->
    <com.example.hottest.cutephonelink.view.GameView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gameView"
     />
    <!--水平排列的LinearLayout,其中的layout_marginTop的值越大，其距离父控件的top距离就越远-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="520dp"
        android:background="#1e72bb"
        android:gravity="center">
        <!--游戏开始结束的按钮-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/starButton"
            android:background="@drawable/button_selector"
            />
        <!--显示游戏剩余时间-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeText"
            android:text="hello"
            android:gravity="center"
            android:textSize="20dip"
            android:width="150px"
            android:textColor="#ff9"
            />
    </LinearLayout>
</RelativeLayout>
